<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/list_item_is_purchased_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        tools:text="CheckBox" />

    <TextView
        android:id="@+id/list_item_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_is_purchased_check_box"
        tools:text="Item Title"
        android:padding="4dp"
        android:textStyle="bold"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_is_purchased_check_box"
        android:id="@+id/list_item_update_pending"/>

    <TextView
        android:id="@+id/list_item_updated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_item_updated_text"
        android:padding="4dp"
        android:layout_toLeftOf="@id/list_item_is_purchased_check_box"/>


    <TextView
        android:id="@+id/list_item_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Item Date"
        android:layout_toLeftOf="@id/list_item_is_purchased_check_box"
        android:layout_below="@id/list_item_title_text_view"
        android:padding="4dp"/>
</RelativeLayout>